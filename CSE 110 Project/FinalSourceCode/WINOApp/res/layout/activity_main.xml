<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" 
	tools:context=".MainActivity">

<FrameLayout
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fake_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>
    
    <Button
        android:id="@+id/inventory_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
		android:layout_gravity="top"
		android:layout_marginTop="0dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/inventory_button_string" />
    
     <Button
        android:id="@+id/wishlist_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/wishlist_button_string" />
        
     <Button
        android:id="@+id/pairIt_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/pairIt_button_string" />
        
     <Button
        android:id="@+id/search_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="165dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/search_button_string" />
        
     <Button
        android:id="@+id/social_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/social_button_string" />
        
     <Button
        android:id="@+id/BAC_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="275dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/BAC_button_string" />
        
     <Button
        android:id="@+id/surprise_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/surprise_button_string" />
        
     <Button
        android:id="@+id/help_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="385dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/help_button_string" />
        
     <Button
        android:id="@+id/logout_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/logout_button_string" />
    
</FrameLayout>

<RelativeLayout 
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cream_texture"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/welcome_message"
        android:layout_marginTop="10dp"
        android:contentDescription="@+id/logo_content_description"
        android:src="@drawable/wino_rhino_transparent" />
    
    <Button
        android:id="@+id/menu_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/menu_button_string" />
    
     <Button
        android:id="@+id/quick_add_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/quick_add_button_string" />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#801108"
        android:text="@string/welcome_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/acronym_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColor="#801108"
        android:text="@string/acronym_string" />

    <TextView
        android:id="@+id/random_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acronym_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text='\"Let us celebrate the occasion with wine and sweet words.\" ~ Plautus' />
    
</RelativeLayout>
</RelativeLayout>