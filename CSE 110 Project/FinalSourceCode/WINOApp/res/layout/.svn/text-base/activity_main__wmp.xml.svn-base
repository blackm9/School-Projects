<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cream_texture"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main_WMPActivity" >

    <ImageView
        android:id="@+id/Main_WMP_logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:contentDescription="@+id/logo_content_description"
        android:src="@drawable/wino_rhino_transparent" />

    <Button
        android:id="@+id/match_meal_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/Main_WMP_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:onClick="mealOnClick"
        android:text="@string/meal_match_button_string"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/match_wine_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/match_meal_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="wineOnClick"
        android:text="@string/match_wine_button_string"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>