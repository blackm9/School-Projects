<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cream_texture"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:contentDescription="@+id/logo_content_description"
        android:src="@drawable/wino_rhino_transparent" />

    <EditText
        android:id="@+id/email_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/username_hint_string"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/password_hint_string"
        android:inputType="textPassword" />

 <!--   <TextView
        android:id="@+id/login_retrieval_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/password_textView"
        android:text="@string/login_retrieval_link_string"
        android:textAppearance="?android:attr/textAppearanceSmall" /> -->

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/password_textView"
        android:layout_marginTop="30dp"
        android:text="@string/login_button_string"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="loginOnClick"/>

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/login_button"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:background="#cccccc" />

    <Button
        android:id="@+id/new_register_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="30dp"
        android:onClick="regOnClick"
        android:text="@string/new_register_button_string"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/surprise_heading_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:text="@string/or_seperator_string"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>