<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cream_texture"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PairedMealActivity" >

    <ListView
        android:id="@+id/pairedWine_listView"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="50dp" >
    </ListView>

    <TextView
        android:id="@+id/pairedWine_wmp_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8b0a00"
        android:gravity="center"
        android:minHeight="40dp"
        android:text="Wines"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pairedWine_wmp_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#8b0a00"
        android:minHeight="40dp"
        android:text="Pick a Wine"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="backOnClick"/>

</FrameLayout>