<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cream_texture"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PairedWineActivity" >

    <TextView
        android:id="@+id/paired_wine_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#8b0a00"
        android:gravity="center"
        android:textColor="#fff"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/paired_wine_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/paired_wine_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/paired_wine_description_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paired_wine_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:minHeight="40dp"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/search_paired_wine_inventory_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/paired_wine_description_label"
        android:layout_marginTop="30dp"
        android:background="#8b0a00"
        android:onClick="searchInventoryOnClick"
        android:text=""
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/search_paired_wine_api_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/search_paired_wine_inventory_button"
        android:layout_marginTop="10dp"
        android:background="#8b0a00"
        android:onClick="searchApiOnClick"
        android:text=""
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>