<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cream_texture">
    
    <TextView
        android:id="@+id/tutorial_menu_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text="@string/tutorial_menu_title_string"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="27sp"
        android:textColor="#000000"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/tutorial_menu_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorial_menu_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:text="@string/tutorial_menu_greeting_string"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="19sp"
        android:textColor="#801108" />

    <Button
        android:id="@+id/video_tutorial_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tutorial_menu_greeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:textColor="#FFF"
        android:text="@string/video_tutorial_button_string"
        android:onClick="displayVideos" />

    <Button
        android:id="@+id/wine_resources_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/video_tutorial_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#FFF"
        android:text="@string/wine_resources_button_string"
        android:onClick="displayResources" />

    

</RelativeLayout>