<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cream_texture"
    tools:context=".SurpriseActivity" >

    <ImageView
        android:id="@+id/surprise_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/surprise_heading_string"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/inv_sample" />

    <TextView
        android:id="@+id/surprise_heading_string"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/wine_texture"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/your_surprise_pick_string"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/surprise_wine_name_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/surprise_wine_varietal_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_wine_name_string"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/surprise_wine_vintage_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_vintage_label_string"
        android:layout_alignBottom="@+id/surprise_wine_vineyard_string"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/surprise_wine_vineyard_string"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_vineyard_label_string"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RatingBar
        android:id="@+id/surprise_rating_bar"
        style="@style/wineRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_wine_varietal_string"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:progressDrawable="@drawable/wine_rating_bar_full"
        android:rating="0"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/surprise_wine_notes_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_notes_label_string"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/surprise_wine_storage_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_storage_label_string"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/surprise_vineyard_label_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_wine_varietal_string"
        android:layout_alignLeft="@+id/surprise_wine_vineyard_string"
        android:text="@string/vineyard_string"
        android:layout_marginTop="70dp"
        android:textColor="#801108"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/surprise_vintage_label_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:layout_alignTop="@+id/surprise_vineyard_label_string"
        
        android:layout_alignRight="@+id/surprise_wine_vintage_string"
        android:text="@string/vintage_string"
        android:textColor="#801108"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/surprise_storage_label_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_wine_vintage_string"
        android:layout_centerHorizontal="true"
        android:text="@string/storage_location_string"
        android:textColor="#801108"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/surprise_notes_label_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise_wine_storage_string"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/notes_string"
        android:textColor="#801108"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
</ScrollView>
